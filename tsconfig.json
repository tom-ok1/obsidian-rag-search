{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "NodeNext",
		"target": "ES2022",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "nodenext",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"types": ["vitest/globals"],
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"paths": {
			"src/*": ["src/*"]
		}
	},
	"include": ["**/*.ts"]
}
